<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_view_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <View
        android:id="@+id/detail_item_dot_alert"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:background="@drawable/dot_green" />

    <ImageView
        android:id="@+id/detail_view_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감자"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/detail_view_expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.10.30까지"
            android:textSize="13sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp" />

        <!-- ✅ ID 추가 -->
        <TextView
            android:id="@+id/tv_days_left_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2일 남음"
            android:textSize="13sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>