<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기록상세"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/img_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 사진 -->
        <ImageView
            android:id="@+id/img_record"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EEEEEE"
            android:src="@android:drawable/ic_menu_gallery"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toTopOf="@+id/label_discernment_name"/>

        <!-- 식재료명 -->
        <TextView
            android:id="@+id/label_discernment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판별 식재료"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/img_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사과"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/label_discernment_name"
            app:layout_constraintBottom_toTopOf="@+id/label_discernment_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 검사 날짜 -->
        <TextView
            android:id="@+id/label_discernment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판별 날짜"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintBottom_toTopOf="@+id/tv_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025.10.01 (수)"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/label_discernment_date"
            app:layout_constraintBottom_toTopOf="@+id/label_discernment_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 신선도 -->
        <TextView
            android:id="@+id/label_discernment_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판별 신선도"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            app:layout_constraintBottom_toTopOf="@+id/tv_freshness"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_freshness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="낮음"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@+id/label_discernment_level"
            app:layout_constraintBottom_toTopOf="@+id/label_discernment_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 판별 번호 -->
        <TextView
            android:id="@+id/label_discernment_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판별 번호"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_freshness"
            app:layout_constraintBottom_toTopOf="@+id/tv_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="486"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@+id/label_discernment_id"
            app:layout_constraintBottom_toTopOf="@+id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:backgroundTint="#90CAF9"
            app:layout_constraintTop_toBottomOf="@+id/tv_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
